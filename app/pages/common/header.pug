-  const headerLink = [{link:"#", name: "Главная"},{link:"#", name: "Почему мы"},{link:"#", name: "Услуги"},{link:"#", name: "Портфолио"},{link:"#", name: "Команда"}]

block header
    header.header#header
        .container.header__container
            .header__logo
                a(href="/")
                    img(src="img/header/header__logo.png" alt="TwoBlocks" width="120" height="40")
            .menu-nav
                ul.menu__box.d-none.d-md-flex
                    for i in headerLink
                        li
                            a.menu__item(href=i.link)=i.name
                .button-cover
                    .button-menu.b2#button-lang
                        input.checkbox(type="checkbox")
                        .knobs
                            span
                        .layer
                .menu__hamburger.d-md-none.d-flex
                    input#menu__toggle(type="checkbox")
                    label.menu__btn(for="menu__toggle")
                        span
                    ul.menu__hamburger-box
                        for i in headerLink
                            li
                                a.menu__item(href=i.link)=i.name