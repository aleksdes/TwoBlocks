-
    const params = [
        {   
            id: "services-card-1",
            img: "img/index/Smart_contracts.png", 
            title: "Cмарт-контракты и DApps", 
            subTitle: "Мы занимаемся разработкой <br> смарт-контрактов, DApps, DAO, DeFi<br> а также выпуском токенов<br> на популярных платформах<br> (Ethereum, Tron, Waves)",
            link: "/",
            blob: "img/index/blob-card-1.png", 
        },
        {
            id: "services-card-2",
            img: "img/index/Blockchain_solutions.png", 
            title: "Блокчейн решения", 
            subTitle: "Кошелки, Еxplorer<br> Биржы, обменики, платформы p2p кредитования<br> Боты телеграм, биржевые роботы<br> Платежные шлюзы",
            link: "/",
            blob: "img/index/blob-card-2.png",
        },
        {   
            id: "services-card-3",
            img: "img/index/Web_app.png", 
            title: "Web/Mobile - app", 
            subTitle: "Мы разрабатываем сайты<br> компаний, сайты для проведения<br> ICO и прочего. Также мы<br> занимаемся мобильной разработкой",
            link: "/",
            blob: "img/index/blob-card-3.png",
        }
    ]

mixin services-card
     for i in params
        .col-12.col-md-6.col-lg-4.box__services-card
            .services-card(id= i.id)
                .services-card__img
                    img(src= i.img, alt= i.title)
                .services-card__title
                    h4= i.title
                    h5 !{i.subTitle}
                button.button__services-card(href= i.link) Заказать услуги
            img(class= i.id)(src= i.blob, alt= i.title)
            

